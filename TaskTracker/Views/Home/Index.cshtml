</div>
<div class="row">

    <div id="taskForm" class="col-md-12">
        <h2 class="text-center">Add new task</h2>
        <form style="width: 400px; margin:auto" method="post" action="post/" id="formTasks">
            <div class="form-group">
                <label class="col-form-label" for="projectName" style="float:left">Project: </label>
                <select class="form-control col-sm-4" id="createInput4select" style="float:right"></select>
            </div>
            <br />
            <br />
            <br />
            <div class="form-group">
                <label class="col-form-label" for="taskName" style="float:left">Task name: </label>
                <input class="form-control col-sm-6" type="text" id="createInput1" style="float:right" />
                <br />
                <br />
                <p id="validationMsgInput1" style="color:red; float:right"></p>
                <br />
            </div>
            <div class="form-group">
                <label class="col-form-label" for="description" style="float:left">Description: </label>
                <input class="form-control col-sm-4" type="text" id="createInput2" style="float:right" />
                <br />
                <br />
                <p id="validationMsgInput2" style="color:red; float:right"></p>
                <br />
            </div>
            <div class="form-group">
                <label class="col-form-label" style="float:left" for="taskStatus">Status: </label>
                <select class="form-control col-sm-4" id="createInput3select" style="float:right">
                    <option value="0" selected>To Do</option>
                    <option value="1">In Progress</option>
                    <option value="2">Done</option>
                </select>
                <br />
                <br />
                <p id="validationMsgInput3" style="color:red; float:right"></p>
                <br />
            </div>
            <div class="form-group">
                <label class="col-form-label" style="float:left" for="taskPriority">Priority: </label>
                <input class="form-control col-sm-4" type="number" min="1" max="3" id="createInput5" style="float: right" />
                <br />
                <br />
                <p id="validationMsgInput5" style="color:red; float:right"></p>
                <br />
            </div>
            <br />
            <div class="row form-group" style="margin:auto; width:300px">
                <button type="submit" class="btn btn-default" style="width:100px; background-color: lightblue">Submit</button>
                <br />
                <br />
                <input id="giveUpBtn" type="button" class="btn btn-default" style="width: 100px" value="Cancel" />
            </div>
        </form>
        @*<button id="jumpToLogin" type="submit" style="margin-left:150px" class="btn btn-default">Odustajanje</button>*@
    </div>
    <div id="tableTasks" class="col-md-12">

    </div>

</div>
